{
  "name": "PreviewSettings",
  "lowCaseName": "previewsettings",
  "description": "Add custom settings for logged in manager users.",
  "author": "matdave",
  "version": "1.0.0-pl",
  "package": {
    "elements": {
      "plugins": [
        {
          "name": "PreviewSettings",
          "file": "PreviewSettings.php",
          "events": [
            "OnMODXInit",
            "onDocFormRender"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "preview_groups",
        "value": "Administrator"
      },
      {
        "key": "manager_only",
        "value": 1,
        "type": "combo-boolean"
      }
    ]
  }
}
